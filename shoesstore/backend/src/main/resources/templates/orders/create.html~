<script>
    // —— 1) Configuración de fechas (hoy+2 / hoy+5) ——
    (function configureDates() {
        const today = new Date();
        const minDate = new Date(today);
        minDate.setDate(today.getDate() + 2);
        document.getElementById('deliveryDate').min = minDate.toISOString().split('T')[0];

        const defaultDate = new Date(today);
        defaultDate.setDate(today.getDate() + 5);
        document.getElementById('deliveryDate').value = defaultDate.toISOString().split('T')[0];
    })();

    // —— 2) Mostrar solo el card del proveedor elegido y ocultar los demás ——
    function updateProductCards() {
        const selectedId = document.getElementById('supplierSelect').value;
        // Todos los cards con data-supplier-id
        document.querySelectorAll('div.card[data-supplier-id]').forEach(card => {
            if (card.getAttribute('data-supplier-id') === selectedId) {
                card.style.display = 'block';
                initDynamicTable(card);
            } else {
                card.style.display = 'none';
            }
        });
        updateOrderSummary();
    }

    // —— 3) Inyectar columna Subtotal y enganchar listeners en un card dado ——
    function initDynamicTable(card) {
        if (card.dataset.inited === 'true') return;
        card.dataset.inited = 'true';

        const table = card.querySelector('table');
        const theadRow = table.querySelector('thead tr');

        // Añadir <th> Subtotal
        if (!theadRow.querySelector('.th-subtotal')) {
            const th = document.createElement('th');
            th.textContent = 'Subtotal';
            th.classList.add('th-subtotal');
            theadRow.appendChild(th);
        }

        // Para cada fila, añadir td.subtotal y listener al input
        table.querySelectorAll('tbody tr').forEach(row => {
            // Crear celda subtotal si no existe
            if (!row.querySelector('.td-subtotal')) {
                const td = document.createElement('td');
                td.classList.add('td-subtotal', 'text-end', 'fw-bold');
                row.appendChild(td);
            }
            // Listener al input numérico
            const input = row.querySelector('input[type="number"]');
            input.addEventListener('change', () => {
                // columna 2 = precio unitario (índice 2)
                const priceText = row.cells[2].textContent || row.cells[2].querySelector('input')?.value;
                const price = parseFloat(priceText.replace(/[^0-9.-]+/g, '')) || 0;
                const qty   = parseInt(input.value, 10) || 0;
                const total = price * qty;
                row.querySelector('.td-subtotal').textContent = '$' + total.toLocaleString('es-CL');
                updateOrderSummary();
            });
        });
    }

    // —— 4) Recalcular resumen de la orden ——
    function updateOrderSummary() {
        let subtotal = 0;
        // Busca el card visible
        const visible = Array.from(document.querySelectorAll('div.card[data-supplier-id]'))
            .find(c => c.style.display === 'block');
        if (visible) {
            visible.querySelectorAll('.td-subtotal').forEach(td => {
                subtotal += parseFloat(td.textContent.replace(/[^0-9.-]+/g, '')) || 0;
            });
        }
        const discount = subtotal * 0.05;
        const iva      = (subtotal - discount) * 0.19;
        const shipping = 45990;
        const total    = subtotal - discount + iva + shipping;

        const spans = document.querySelectorAll('.summary-item span:last-child');
        if (spans.length >= 4) {
            spans[0].textContent = '$' + subtotal.toLocaleString('es-CL');
            spans[1].textContent = '-$' + discount.toLocaleString('es-CL');
            spans[2].textContent = '$' + iva.toLocaleString('es-CL');
            spans[3].textContent = '$' + shipping.toLocaleString('es-CL');
            document.querySelector('.summary-total span:last-child')
                .textContent = '$' + total.toLocaleString('es-CL');
        }
    }

    // —— 5) Rellenar supplier-info (si lo usás) ——
    function updateSupplierInfo() {
        const sel = document.getElementById('supplierSelect');
        const opt = sel.selectedOptions[0] || {};
        const fields = {
            contact:  document.querySelector('.supplier-info .contact'),
            email:    document.querySelector('.supplier-info .email'),
            phone:    document.querySelector('.supplier-info .phone'),
            address:  document.querySelector('.supplier-info .address')
        };
        if (!opt.value) {
            Object.values(fields).forEach(el => el.textContent = '–');
        } else {
            fields.contact.textContent = opt.dataset.contact || '–';
            fields.email.textContent   = opt.dataset.email   || '–';
            fields.phone.textContent   = opt.dataset.phone   || '–';
            fields.address.textContent = opt.dataset.address || '–';
        }
    }

    // —— 6) Inicialización de listeners al cargar la página ——
    document.addEventListener('DOMContentLoaded', () => {
        const sel = document.getElementById('supplierSelect');
        sel.addEventListener('change', () => {
            updateSupplierInfo();
            updateProductCards();
        });
        // disparos iniciales
        updateSupplierInfo();
        updateProductCards();
    });
</script>


</body>
</html>


